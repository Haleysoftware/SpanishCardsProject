<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<Spinner
			android:id="@+id/spinnername"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:prompt="@string/NameSpinText" />

	<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="10" >

		<TextView
				android:id="@+id/nameScoreTag"
				android:layout_weight="2"
				android:layout_width="0sp"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:textStyle="bold"
				android:text="@string/tagScore"
				android:visibility="gone" />

		<TextView
				android:id="@+id/nameModeTag"
				android:layout_weight="5"
				android:layout_width="0sp"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:textStyle="bold"
				android:text="@string/tagMode"
				android:visibility="gone" />

		<TextView
				android:id="@+id/nameDateTag"
				android:layout_weight="3"
				android:layout_width="0sp"
				android:layout_height="wrap_content"
				android:gravity="left"
				android:textStyle="bold"
				android:text="@string/tagDate"
				android:visibility="gone" />

	</LinearLayout>

	<ListView
			android:id="@android:id/list"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:dividerHeight="2sp"
			android:fastScrollEnabled="true" />

	<TextView
			android:id="@id/android:empty"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/NoScores"/>

</LinearLayout>